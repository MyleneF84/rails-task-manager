<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>
   <%#= check_box_tag('completed', value = "1", checked = @task.completed)%>
<% if @task.completed %>
  <p><%='This task has been completed'%></p>
<% else%>
  <p><%= 'This task is not done yet !'%></p>
<% end %>
   </p>
   <%= link_to "Edit this task", edit_task_path %>

   <%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?"}
%>

<%= link_to "Back to list", tasks_path %>
